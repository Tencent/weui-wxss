<view class="page" data-weui-theme="{{theme}}">
	<view class="page__hd">
		<view class="page__title">TopTips</view>
		<view class="page__desc">顶部提示条</view>
	</view>
	<view class="page__bd page__bd_spacing">
		<a class="weui-btn weui-btn_default" bindtap="open">显示提示条</a>
		<a class="weui-btn weui-btn_default" bindtap="close">隐藏提示条</a>
	</view>
	<view wx:if="{{topTips}}" class="weui-toptips weui-toptips_warn fadeIn {{hide ? 'fadeOut' : ''}}">错误提示</view>
</view>
